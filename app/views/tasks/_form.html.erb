      <!-- remote:true turns on AJAX -->
<%= form_for(task, remote:true) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %>
        prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

<!-- ***The try() is a rails method that removes the submit button
only for the edit popup. It checks to see if the task is being created. -->
<% unless task.try(:id) %>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
<% end %>
